<!DOCTYPE html>
<html>
  <head>
    <title>LittleShopV2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <%= link_to "Home", root_path %>
    <%= link_to "Items", items_path %>
    <%= link_to "Merchants", merchants_path %>

    <% if current_user == nil %>
      <section id="visitor-nav-cart">
        <% if @item != nil %>
          <%= button_to "Add to Cart", add_to_cart_path(item_id: @item.id) %>
        <% end %>
        <%= link_to "Cart", cart_path %>: <%= cart.total_count %>
      </section>
      <%= link_to "Login", login_path %>
      <%= link_to "Register", new_user_path %>
    <% end %>

    <% if current_user && current_user.default? %>
      <section id="user-nav-cart">
        <% if @item != nil %>
          <%= button_to "Add to Cart", add_to_cart_path(item_id: @item.id) %>
        <% end %>
        <%= link_to "Cart", cart_path %>: <%= cart.total_count %>
      </section>
      <%= link_to "My Profile", ("/profile") %>
      <p>Logged in as <%= current_user.name %></p>
      <%= link_to "Logout", logout_path %>
    <% end %>

    <% if current_user && current_user.merchant? %>
      <%= link_to "Merchant Dashboard", dashboard_path %>
      <%= link_to "Logout", logout_path %>
    <% end %>

    <% if current_user && current_user.admin? %>
      <%= link_to "Admin Dashboard", admin_dashboard_path %>
      <%= link_to "Users", admin_users_path %>
      <%= link_to "Logout", logout_path %>
    <% end %>
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>

    <%= yield %>
  </body>
</html>
