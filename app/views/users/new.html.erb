<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address, "Street Address" %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip, "Zip Code" %>
  <%= f.text_field :zip %>

  <%= f.label :email, "Email Address" %>
  <%= f.text_field :email %>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>

  <%= f.label :password, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Register as a User" %>

<% end %>
